{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "vscode"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "tests"
  ]
}