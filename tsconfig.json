{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "out",
    "lib": [
      "ES2022"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "vscode"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "tests",
    "test-files"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
