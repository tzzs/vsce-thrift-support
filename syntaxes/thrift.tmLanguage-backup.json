{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Thrift",
  "scopeName": "source.thrift",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#annotations"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.thrift",
          "match": "//.*$"
        },
        {
          "name": "comment.line.number-sign.thrift",
          "match": "#.*$"
        },
        {
          "name": "comment.block.thrift",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.thrift",
          "match": "\\b(namespace|include|cpp_include|php_include|py_module|perl_package|ruby_namespace|smalltalk_category|smalltalk_prefix|java_package|cocoa_prefix|csharp_namespace|delphi_namespace|cpp_namespace|d_namespace|c_glib|netstd|st|xsd_all|xsd_optional|xsd_nillable|xsd_namespace|xsd_attrs)\\b"
        },
        {
          "name": "keyword.other.thrift",
          "match": "\\b(const|typedef|enum|senum|struct|union|exception|extends|service|oneway|void|throws|optional|required)\\b"
        },
        {
          "name": "keyword.other.thrift",
          "match": "\\b(stream|sink|interaction|performs)\\b"
        },
        {
          "name": "storage.modifier.thrift",
          "match": "\\b(async|oneway|stream|sink|interaction|performs|reference)\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.thrift",
          "begin": "\\(",
          "end": "\\)",
          "patterns": [
            {
              "name": "entity.name.tag.thrift",
              "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)"
            },
            {
              "name": "string.quoted.double.thrift",
              "match": "\"([^\"\\\\]|\\\\.)*\""
            },
            {
              "name": "string.quoted.single.thrift",
              "match": "'([^'\\\\]|\\\\.)*'"
            },
            {
              "name": "constant.numeric.thrift",
              "match": "\\b[0-9]+\\b"
            },
            {
              "name": "constant.language.thrift",
              "match": "\\b(true|false)\\b"
            },
            {
              "include": "#nested_parens"
            }
          ]
        }
      ]
    },
    "nested_parens": {
      "patterns": [
        {
          "begin": "\\(",
          "end": "\\)",
          "patterns": [
            {
              "include": "#annotations"
            }
          ]
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.thrift",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.hex.thrift",
          "match": "\\b0x[0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.float.thrift",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.language.boolean.thrift",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.other.list.thrift",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            {
              "include": "#constants"
            },
            {
              "include": "#comments"
            }
          ]
        },
        {
          "name": "constant.other.map.thrift",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "include": "#constants"
            },
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.thrift",
          "match": "\\b(bool|byte|i8|i16|i32|i64|double|string|binary|uuid|slist)\\b"
        },
        {
          "name": "storage.type.container.thrift",
          "match": "\\b(list|set|map)\\b"
        },
        {
          "name": "storage.type.user.thrift",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.thrift",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.thrift",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.thrift",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.thrift",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.thrift",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.octal.thrift",
          "match": "\\b0[0-7]+\\b"
        },
        {
          "name": "constant.numeric.decimal.thrift",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.thrift",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.thrift",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.thrift",
          "match": "[=<>!&|+\\-*/%^~?:;,{}()\\[\\]]"
        }
      ]
    }
  }
}