{
  "comments": {
    "lineComment": ["//", "#"],
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["\"", "\""]
  ],
  "wordPattern": "(?:[\"'][^\"']+[\"'])|(?:[a-zA-Z_][a-zA-Z0-9_]*)",
  "indentationRules": {
    "increaseIndentPattern": "^(.*\\{\\s*|.*\\(\\s*|.*\\[\\s*|.*<\\s*|.*struct\\s+\\w+\\s*|.*union\\s+\\w+\\s*|.*service\\s+\\w+\\s*|.*exception\\s+\\w+\\s*|.*enum\\s+\\w+\\s*|.*interaction\\s+\\w+\\s*)$",
    "decreaseIndentPattern": "^\\s*(\\}|\\)|\\]|>|.*\\bend\\b.*)$"
  },
  "folding": {
        "markers": {
            "start": "^\\s*//\\s*#?region\\b",
            "end": "^\\s*//\\s*#?endregion\\b"
        }
    }
}