{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "rules": {
    // 在继承的基础上，保留你个性化的偏好
    "@typescript-eslint/naming-convention": [
      "warn",
      {
        "selector": "variableLike",
        "format": [
          "camelCase",
          "PascalCase",
          "UPPER_CASE"
        ]
      }
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    // 建议改为 error，强制使用 === 是行业共识
    "no-console": "warn",
    // 生产环境不建议留太多 console
    "curly": "warn"
  },
  "ignorePatterns": [
    "out",
    "dist",
    "**/*.d.ts",
    "node_modules"
  ]
}